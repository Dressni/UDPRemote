<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dressler.nick.udp_remote.MainActivity">

    <Button
        android:id="@+id/links"
        android:layout_width="123dp"
        android:layout_height="220dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="L"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rechts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493" />

    <Button
        android:id="@+id/rechts"
        android:layout_width="123dp"
        android:layout_height="220dp"
        android:layout_marginLeft="168dp"
        android:text="R"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/gaspedal"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="243dp"
        android:layout_height="259dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="88dp"
        android:max="100"
        android:progress="33"
        android:rotation="270"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rechts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.692" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="161dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Debug"
        app:layout_constraintEnd_toStartOf="@+id/gaspedal"
        app:layout_constraintStart_toEndOf="@+id/rechts"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
